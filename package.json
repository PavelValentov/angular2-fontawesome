{
  "name": "angular2-fontawesome",
  "version": "5.2.0",
  "description": "Angular 5 Component/Directive for Fontawesome",
  "homepage": "https://github.com/travelist/angular2-fontawesome",
  "author": "Komei Shimamura <komei.t.f@gmail.com>",
  "license": "MIT",
  "keywords": [
    "angular",
    "angular2",
    "angular5",
    "fontawesome",
    "typescript"
  ],
  "main": "bundles/angular2-fontawesome.umd.js",
  "module": "angular2-fontawesome.js",
  "typings": "angular2-fontawesome.d.ts",
  "scripts": {
    "watch": "tsc -w",
    "compile": "npm run compile.commonjs && npm run compile.systemjs",
    "compile.commonjs": "ngc -p tsconfig.publish.json",
    "compile.systemjs": "node ./.config/umd-bundler.js",
    "test": "tslint ./src/*.ts ./src/**/*.ts",
    "prepublish": "npm run compile",
    "typings": "typings"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/travelist/angular2-fontawesome.git"
  },
  "bugs": {
    "url": "https://github.com/travelist/angular2-fontawesome/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/compiler-cli": "4.1.3",
    "@angular/core": "4.1.3",
    "async": "^2.4.1",
    "del-cli": "1.0.0",
    "font-awesome": "4.7.0",
    "rxjs": "5.4.0",
    "systemjs-builder": "0.16.4",
    "tslint": "^5.3.2",
    "typescript": "^2.3.3",
    "zone.js": "0.8.11"
  }
}
